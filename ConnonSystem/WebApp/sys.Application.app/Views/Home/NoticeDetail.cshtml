@{
    sys.Dal.Entity.AppManage.NoticeEntity entity = ViewBag.NoticeEntity;
}
<html>
<head>
    <meta charset="UTF-8">
    <title></title>
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <link href="/Content/css/mui.min.css" rel="stylesheet" />
    <script type="text/javascript" src="/Content/js/jquery-2.1.0.js"></script>
    <link rel="stylesheet" href="/Content/css/home_page.css" />
</head>
<body>


    <header class="mui-bar mui-bar-nav">
        <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left" href="/home/notice">返回</a>
        <h1 class="mui-title">消息</h1>
        <div class="mui-icon mui-icon-more mui-pull-right"></div>
    </header>
    <div class="Xiaoxi">
        <ul>
            <li>

                <img class="cover" src='@(string.IsNullOrWhiteSpace(entity.Cover)?sys.Util.Config.GetValue("ImgDefault"):sys.Util.Config.GetValue("ImgHost")+entity.Cover)' />
                <span class="title" style="color:@entity.FullHeadColor">@entity.FullHead</span><br />
                <small class="createtime"> </small>
                <div class="Meesage">
                    @Html.Raw(HttpUtility.HtmlDecode(entity.NewsContent))
                </div>
            </li>
            <li></li>
        </ul>
    </div>
</body>

</html>
<script>
    var mydata = new Date();
    $(".Xiaoxi ul li l").text(mydata.getHours() + ":" + mydata.getMinutes());

</script>
<script src="~/Content/js/common/sys.dateFormat.js"></script>
<script>
    var time = "@entity.CreateDate";
    $(function () {
        $(".createtime").text(dateFormat(time, "yyyy-MM-dd HH:mm"));
    })
</script>