<script type="text/javascript">

    var pageIndex;
    //下拉手势
    var dropload = $('#info_contentul').dropload({
        domUp: {
            domClass: 'dropload-up',
            domRefresh: '<div class="dropload-refresh">↓下拉刷新</div>',
            domUpdate: '<div class="dropload-update">↑释放更新</div>',
            domLoad: '<div class="dropload-load"><span class="loading"></span>加载中...</div>'
        },
        domDown: {
            domClass: 'dropload-down',
            domRefresh: '<div class="dropload-refresh">↑上拉加载更多</div>',
            domUpdate: '<div class="dropload-update">↓释放加载</div>',
            domLoad: '<div class="dropload-load"><span class="loading"></span>加载中...</div>',
            domNoData: '<div class="dropload-noData">暂无数据</div>'
        },
        loadDownFn: function (me) {
            GetBindCommentList();
        }
    });
    function GetBindCommentList() {
        pageIndex = parseInt($("#page").val()) + 1;
        $("#page").val(pageIndex);
        var queryJson = {
            ObjectId: $("#ObjectId").val(),
            Category:"MessageReply",
        }
        $.ajax({
            async: false,
            type: "post",
            url: "/Collection/GetCommentPageList",
            data: {
                pageIndex: pageIndex,
                sidx: 'CreateDate',
                sord: 'Desc',
                queryJson: JSON.stringify(queryJson),
            },
            success: function (d) {

                var obj = eval("(" + d + ")");
                var data = "";
                var readrows = "";
                var newhtml5 = '';
                if (obj.type == 1) {
                    data = eval("(" + obj.message + ")");
                    if (data != "" &&data.length>0) {
                        newhtml5 = addHtmldata(data);
                        $('#List_PL').append(newhtml5);
                    }
                }
            },
            error: function (xhr, type) {
            }
        });
    }
    function addHtmldata(data) {
        var html = '';
        $.each(data, function (i, item) {
            html += ' <div class="List_Plq_bt"><div class="List_Plq_top">';
            if (item.CreateUserHeadIcon == null || item.CreateUserHeadIcon == "") {
                html += ' <div class="Plq_top_tx"><img src="@sys.Util.Config.GetValue("ImgDefault")"/></div>';
            } else {
                html += ' <div class="Plq_top_tx"><img src="@sys.Util.Config.GetValue("ImgHost")' + item.CreateUserHeadIcon + '"/></div>';
            }
            html += '        <div class="Plq_top_Xq"><span>' + item.CreateUserName+ '</span><br /><span>' + item.CreateUserPosition+'</span></div>';
            html += '       <div class="Plq_top_date">' + dateFormat(item.CreateDate, "yyyy.MM.dd") +'</div> </div>'
            html += (' <div class="List_Plq_txt">  <span>' + AnalyticEmotion(item.Content)+'</span>   </div>');

            html += '              </div> </div>';
        });
        return html;
    }


    //Html解码获取Html实体
    function htmlDecode(value) {
        return $('<div/>').html(value).text();
    }
</script>

