                        return false;
                    }
                });
            }
        });
        //批量添加
        $("#lr-batch-addview").click(function () {
            dialogOpen({
                id: "viewForm",
                title: '批量添加视图',
                url: '/AuthorizeManage/ModuleColumn/BatchAdd?SurveyId=' + escape(SurveyId),
                width: "450px",
                height: "300px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick(function (data) {
